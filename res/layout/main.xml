<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_width="fill_parent"
	  android:layout_height="80dip"
	  android:orientation="horizontal"
	  android:layout_gravity="center" >
		<ImageView
			android:src="@drawable/dc_logo"
			android:layout_height="60dip"
			android:layout_width="80dip"
			android:layout_centerInParent="true" 
			android:layout_gravity="center"/>
		  <TextView
		    android:gravity="center_vertical"
		    android:layout_gravity="center_vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:textSize="30dp"
		    android:textStyle="bold"
		    android:text="@string/main_menu_message" />
	</LinearLayout>
    
<TextView android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:gravity="center"
	android:textSize="20sp"
	android:layout_marginLeft="10dp" 
	android:layout_marginRight="10dp"
	android:text="@string/enterlmd"/>
	
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <Button
            android:id="@+id/dayupbtn"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@drawable/date_button_top"
            android:text="+"
            android:textSize="40dp" 
            android:textColor="#666"/>

        <TextView
            android:id="@+id/daytxt"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_below="@id/dayupbtn"
            android:background="@drawable/date_edit"
            android:gravity="center"
            android:padding="3dp"
            android:textSize="28dp" />

        <Button
            android:id="@+id/daydownbtn"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/daytxt"
            android:background="@drawable/date_button_bottom"
            android:text="-"
            android:textSize="40dp"
            android:textColor="#666" />

        <Button
            android:id="@+id/monthupbtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/dayupbtn"
            android:background="@drawable/date_button_top"
            android:text="+"
            android:textSize="40dp"
            android:textColor="#666" />

        <TextView
            android:id="@+id/monthtxt"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_below="@id/monthupbtn"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/daytxt"
            android:background="@drawable/date_edit"
            android:gravity="center"
            android:padding="3dp"
            android:textSize="28dp" />

        <Button
            android:id="@+id/monthdownbtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/monthtxt"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/daydownbtn"
            android:background="@drawable/date_button_bottom"
            android:text="-"
            android:textSize="40dp"
            android:textColor="#666" />

        <Button
            android:id="@+id/yearupbtn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/monthupbtn"
            android:background="@drawable/date_button_top"
            android:text="+"
            android:textSize="40dp"
			android:textColor="#666"/>

        <TextView
            android:id="@+id/yeartxt"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_below="@id/yearupbtn"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/monthtxt"
            android:background="@drawable/date_edit"
            android:gravity="center"
            android:padding="3dp"
            android:textSize="28dp" />

        <Button
            android:id="@+id/yeardownbtn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/yeartxt"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/monthdownbtn"
            android:background="@drawable/date_button_bottom"
            android:text="-"
            android:textSize="40dp"
            android:textColor="#666" />
    </RelativeLayout>

<TextView android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:gravity="center"
	android:textSize="15sp" 
	android:id="@+id/lmdgreg"/>


<TextView android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:gravity="center"
	android:textSize="20sp"
	android:layout_marginTop="10dp" 
	android:text="@string/eddethiolabel"/>
	
<TextView android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:gravity="center"
	android:textSize="30sp"
	android:layout_marginTop="10dp"  
	android:id="@+id/eddethio"/>
	
<TextView android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:gravity="center"
	android:textSize="15sp"
	android:layout_margin="5dp" 
	android:id="@+id/eddgreg"/>
</LinearLayout>
