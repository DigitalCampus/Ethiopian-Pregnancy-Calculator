<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_width="fill_parent"
	  android:layout_height="80dip"
	  android:orientation="horizontal"
	  android:layout_gravity="center" >
		<ImageView
			android:src="@drawable/dc_logo"
			android:layout_height="60dip"
			android:layout_width="80dip"
			android:layout_centerInParent="true" 
			android:layout_gravity="center"/>
		  <TextView
		    android:gravity="center_vertical"
		    android:layout_gravity="center_vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:textSize="30dp"
		    android:textStyle="bold"
		    android:text="@string/main_menu_message" />
	</LinearLayout>
    
<TextView android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:gravity="center"
	android:textSize="20sp"
	android:layout_marginLeft="10dp" 
	android:layout_marginRight="10dp"
	android:text="@string/enterlmd"/>
	
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content"
              android:stretchColumns="*" 
             >
    <TableRow>
    	<Button android:id="@+id/dayupbutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="+" 
            android:textSize="20dp"
            android:textStyle="bold" 
            />
    	<Button android:id="@+id/monthupbutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="+" 
            android:textSize="20dp"
            android:textStyle="bold"
            />
    	<Button android:id="@+id/yearupbutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="+" 
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </TableRow>
	<TableRow >
		<EditText android:id="@+id/daytext"
        	android:layout_width="fill_parent"
        	android:editable="false"
        	android:focusable="false"
        	android:gravity="center"
        	android:textSize="28dp"/>
		<EditText android:id="@+id/monthtext"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:editable="false"
			android:focusable="false"
			android:gravity="center"
			android:textSize="28dp"/>
        <EditText android:id="@+id/yeartext"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:editable="false"
        	android:focusable="false"
        	android:gravity="center"
        	android:textSize="28dp"/>
	</TableRow> 
	<TableRow>
    	<Button android:id="@+id/daydownbutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="-" 
            android:textSize="20dp"
            android:textStyle="bold"/>
    	<Button android:id="@+id/monthdownbutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="-" 
            android:textSize="20dp"
            android:textStyle="bold"
            />
    	<Button android:id="@+id/yeardownbutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="-" 
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </TableRow>
</TableLayout>

<TextView android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:gravity="center"
	android:textSize="15sp" 
	android:id="@+id/lmdgreg"/>


<TextView android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:gravity="center"
	android:textSize="20sp"
	android:layout_marginTop="10dp" 
	android:text="@string/eddethiolabel"/>
	
<TextView android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:gravity="center"
	android:textSize="30sp"
	android:layout_marginTop="10dp"  
	android:id="@+id/eddethio"/>
	
<TextView android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:gravity="center"
	android:textSize="15sp"
	android:layout_margin="5dp" 
	android:id="@+id/eddgreg"/>
</LinearLayout>
